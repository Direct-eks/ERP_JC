<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jc.backend.dao.EndUserMapper">
    
    <resultMap id="EndUserResultMap" type="org.jc.backend.entity.DO.EndUserDO">
        <result property="userID" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>
    
    <select id="queryUserByName" resultMap="EndUserResultMap">
        select * from end_user where username = #{username};
    </select>

    <select id="queryRolesByUserId" resultType="string">
        select role
        from user_role join role on user_role.role_id = role.role_id
        where user_role.user_id = #{id}
    </select>

    <select id="queryPermissionsByUserId" resultType="string">
        select permission
        from user_permission join permission on user_permission.permission_id = permission.permission_id
        where user_permission.user_id = #{id}
    </select>
</mapper>