<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jc.backend.dao.EndUserMapper">
    
    <resultMap id="EndUserResultMap" type="org.jc.backend.entity.EndUserO.EndUserDO">
        <result property="userID" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <select id="queryUserByName" resultMap="EndUserResultMap">
        select user_id, username, password
        from u_end_user
        where username = #{username};
    </select>



    <select id="queryRoleByUserId" resultType="String">
        select role
        from u_user_role join u_role on u_user_role.role_id = u_role.role_id
        where u_user_role.user_id = #{id}
    </select>

    <select id="queryPermissionsByUserId" resultType="String">
        select permission
        from u_user_permission join u_permission on u_user_permission.permission_id = u_permission.permission_id
        where u_user_permission.user_id = #{id}
    </select>

    <select id="queryAllUsers" resultMap="EndUserResultMap">
        select user_id, username, remark
        from u_end_user
    </select>

    <resultMap id="roleResultMap" type="org.jc.backend.entity.EndUserO.UserRole">
        <result property="roleID" column="role_id"/>
        <result property="role" column="role"/>
    </resultMap>

    <select id="queryAllRoles" resultMap="roleResultMap">
        select role_id, role
        from u_role
    </select>

    <resultMap id="permissionResultMap" type="org.jc.backend.entity.EndUserO.UserPermission">
        <result property="permissionID" column="permission_id"/>
        <result property="permission" column="permission"/>
    </resultMap>

    <select id="queryAllPermissions" resultMap="permissionResultMap">
        select permission_id, permission
        from u_permission
    </select>

    <insert id="insertUserInfo" useGeneratedKeys="true" keyProperty="userID"
        keyColumn="user_id">
        insert into u_end_user(username, password, remark)
        values(#{username}, #{password}, #{remark})
    </insert>

    <update id="updateUserInfo">
        update u_end_user
        set username = #{username},
            remark = #{remark}
        where user_id = #{userID}
    </update>

    <delete id="deleteUserInfo">
        delete from u_end_user
        where user_id = #{id}
    </delete>

    <insert id="insertUserRole">
        insert into u_user_role(user_id, role_id)
        values (#{id}, #{roleID})
    </insert>

    <update id="updateUserRole">
        update u_user_role
        set role_id = #{roleID}
        where user_id = #{id}
    </update>

    <delete id="deleteUserRole">
        delete from u_user_role
        where user_id = #{id}
    </delete>

    <insert id="insertUserPermission">
        insert into u_user_permission(user_id, permission_id)
        values(#{id}, #{permissionID})
    </insert>

    <delete id="deleteUserPermission">
        delete from u_user_permission
        where user_id = #{id} and permission_id = #{permissionID}
    </delete>

</mapper>