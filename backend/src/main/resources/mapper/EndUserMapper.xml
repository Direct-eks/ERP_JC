<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jc.backend.dao.EndUserMapper">
    
    <resultMap id="EndUserResultMap" type="org.jc.backend.entity.DO.EndUserDO">
        <result property="userID" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>
    
    <select id="queryUserByName" resultMap="EndUserResultMap">
        select user_id, username, password
        from u_end_user
        where username = #{username};
    </select>

    <select id="queryRolesByUserId" resultType="string">
        select role
        from u_user_role join u_role on u_user_role.role_id = u_role.role_id
        where u_user_role.user_id = #{id}
    </select>

    <select id="queryPermissionsByUserId" resultType="string">
        select permission
        from u_user_permission join u_permission on u_user_permission.permission_id = u_permission.permission_id
        where u_user_permission.user_id = #{id}
    </select>

    <select id="queryAllUsers" resultMap="EndUserResultMap">
        select user_id, username
        from u_end_user
    </select>
</mapper>